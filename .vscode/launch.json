{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: NodeJs",
            "type": "node",
            "request": "attach",
            "remoteRoot": "/work/src/",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/nodejs/src/",
            "protocol": "inspector",
            "restart": true
        },     
        // {
        //     "name": "Web React Chrome",
        //     "type": "chrome",
        //     "request": "launch",
        //     "url": "http://localhost:3000",
        //     "webRoot": "${workspaceRoot}/web/src",           
        // },
        {
            "name": "Docker: Web React Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/web/src",
            "sourceMapPathOverrides": {
                "/app/src/*": "${webRoot}/*"
            },
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "sourceMaps": true,
            "userDataDir": false
        }
    ]
}
